<h1>Please Update Your Information</h1>

{{#if starship}}
  {{#with starship}}
     <form action="/starship/{{id}}?_method=PUT" method="POST">
        <label for="firstName">New Starship Name</label>
        <input type="text" name="name" placeholder="What is your new ship name?" value="{{name}}">
        <br>
        <label for="middleName">New Starship Registry</label>
        <input type="text" name="registry" placeholder="What is your new ship registry?" value="{{registry}}">
        <br>
        <label for="lastName">Updated Ship Status</label>
        <input type="text" name="status" placeholder="What is your ships Status?" value="{{status}}">
        <br>
        <label for="rank">Ship Commissioned Date</label>
        <input type="text" name="dateStatus" placeholder="When was you ship commissioned or would you like it to be commissioned?" value="{{dateStatus}}">
        <br>
        <label for="spacecraftClass">Ship Class Name</label>
        <input type="text" name="placeOfBirth" placeholder="Defiant Class, Intrepid Class, Galaxy Class?" value="{{spacecraftClass}}">
        <br>
        <input type="submit" value="submit">
    </form>
  {{/with}}
{{/if}}