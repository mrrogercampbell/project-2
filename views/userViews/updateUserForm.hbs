<h1>Please Update Your Information</h1>

{{#if user}}
  {{#with user}}
     <form action="/user/{{id}}?_method=PUT" method="POST">
        <label for="firstName">{{name.firstName}}</label>
        <input type="text" name="firstName" placeholder="What is your first name?">
        <br>
        <label for="middleName">{{name.middleName}}</label>
        <input type="text" name="middleName" placeholder="What is your middle name?">
        <br>
        <label for="lastName">{{name.lastName}}</label>
        <input type="text" name="lastName" placeholder="What is your last name?">
        <br>
        <label for="rank">{{rank}}</label>
        <input type="text" name="rank" placeholder="What is your desiered rank?">
        <br>
        <label for="placeOfBirth">{{placeOfBirth}}</label>
        <input type="text" name="placeOfBirth" placeholder="City, State, Country, Planet?">
        <br>
        <label for="yearOfBirth">{{yearOfBirth}}</label>
        <input type="text" name="yearOfBirth" placeholder="What year were you born?">
        <br>
        <label for="monthOfBirth">{{monthOfBirth}}</label>
        <input type="text" name="monthOfBirth" placeholder="What month were you born?">
        <br>
        <label for="gender">{{dayOfBirth}}</label>
        <input type="text" name="dayOfBirth" placeholder="What day were you born on??">
        <br>
        <label for="gender">{{gender}}</label>
        <input type="text" name="gender" placeholder="What gender do you identify with?">
        <br>
        <label for="maritalStatus">{{maritalStatus}}</label>
        <input type="text" name="maritalStatus" placeholder="What is your Marital Status?">
        {{!-- <br>
        <label for="serialNumber">{{serialNumber}}</label>
        <input type="text" name="serialNumber" placeholder="?"> --}} 
        {{!-- How can I randomly generate a serial number?? --}}
        <br>
        <input type="submit" value="submit">
    </form>
  {{/with}}
{{/if}}